<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    app:cardCornerRadius="8dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_gravity="center"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:padding="30dp"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:layout_height="wrap_content">

        <ImageView

            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/ic_bitcoin_3"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:fontFamily="@font/montserratb"
            android:text="50 coins has been successfully added to your wallet"
            android:layout_height="wrap_content" />


        <Button
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:text="@string/home"
            android:id="@+id/addMoreCoins"
            android:textColor="@color/white"
            android:fontFamily="@font/montserratb"
            android:background="@drawable/play_button"
            android:layout_height="wrap_content" />

        <Button
            android:layout_marginTop="10dp"
            android:background="@drawable/edittext_layout_blue"
            android:layout_width="match_parent"
            android:text="@string/add_more_coins"
            android:fontFamily="@font/montserratb"
            android:textAllCaps="true"
            android:id="@+id/gotoHomeScreen"
            android:textColor="@color/colorPrimary"
            android:layout_height="wrap_content" />

    </LinearLayout>

</android.support.v7.widget.CardView>