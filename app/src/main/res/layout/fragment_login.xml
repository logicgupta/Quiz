<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="40dp"
                android:gravity="center"
                android:src="@drawable/logo"
                />

            <EditText
                android:id="@+id/email"
                android:layout_marginTop="30dp"
                android:layout_width="match_parent"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:paddingStart="15dp"
                android:fontFamily="@font/roboto_regular"
                android:layout_gravity="center"
                android:layout_height="45dp"
                android:background="@drawable/edittext_selector_color"
                android:hint="@string/fragment_login_email_hint"
                android:inputType="textEmailAddress"/>


                <EditText
                    android:id="@+id/password"
                    android:layout_width="match_parent"
                    android:paddingLeft="10dp"
                    android:cursorVisible="false"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginTop="25dp"
                    android:fontFamily="@font/roboto_regular"
                    android:paddingStart="15dp"
                    android:layout_gravity="center"
                    android:layout_height="45dp"
                    android:background="@drawable/edittext_selector_color"
                    android:hint="@string/fragment_login_password_hint"
                    android:inputType="textPassword"/>


            <TextView
                android:id="@+id/resetTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/roboto_regular"
                android:textColor="#666666"
                android:textSize="13sp"
                android:layout_marginRight="40dp"
                android:text="Forgot Password ?"
                android:textAllCaps="true" />

            <TextView
                android:id="@+id/signInButton"
                android:layout_width="match_parent"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                android:layout_gravity="center"
                android:text="SIGN IN"
                    android:gravity="center"
                android:textSize="20sp"
                android:textColor="#FFFFFF"
                android:background="@drawable/login_button_design"
                android:layout_marginTop="25dp"
                android:layout_height="44dp" />

            <LinearLayout
                android:layout_marginTop="35dp"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_marginRight="52dp"
                android:layout_marginLeft="52dp"
                android:layout_height="wrap_content">
                <View
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="5dp"
                    android:layout_gravity="center"
                    android:layout_height="2dp"
                    android:background="#c0c0c0"
                    >
                </View>

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="0.2"
                    android:text="OR"
                    android:fontFamily="@font/roboto_regular"
                    android:layout_gravity="center"
                    android:layout_height="wrap_content" />

                <View
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:layout_height="2dp"
                    android:background="#c0c0c0"
                    >
                </View>
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="35dp"
                android:layout_width="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_weight="2"
                android:padding="5dp"
                android:layout_height="0dp">
                <TextView
                    android:id="@+id/google"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:background="@mipmap/google"
                    android:layout_height="45dp" />
                <TextView
                    android:id="@+id/facebook"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:background="@mipmap/facebook"
                    android:layout_marginLeft="10dp"
                    android:layout_height="45dp" />

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>