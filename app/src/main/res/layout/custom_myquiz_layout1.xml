<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="10dp"
    android:elevation="10dp"
    android:layout_margin="8dp"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="match_parent">
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/imageView"
                android:src="@drawable/com_facebook_button_login_logo"
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="10dp"
                android:layout_height="80dp"
                android:layout_marginBottom="4dp"/>
            <LinearLayout
                android:layout_marginTop="15dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/textViewName"
                    android:text="HOLLYWOOD"
                    android:fontFamily="@font/montserratb"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/time"
                    android:text="Time"
                    android:fontFamily="@font/roboto_regular"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/questions"
                    android:text="Questions"
                    android:fontFamily="@font/roboto_regular"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <androidx.cardview.widget.CardView
                android:layout_marginTop="25dp"
                android:layout_width="0dp"
                android:layout_weight="0.3"
                android:layout_marginRight="20dp"
                app:cardCornerRadius="12dp"
                app:cardBackgroundColor="#80000000"
                android:layout_height="30dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="match_parent">
                    <ImageView
                        android:layout_width="0dp"

                        android:layout_weight="1"
                        android:src="@drawable/coins2"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/coinsTextView"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:textSize="16sp"
                        android:layout_gravity="center"
                        android:text="5"
                        android:fontFamily="@font/roboto_regular"
                        android:gravity="center"
                        android:textColor="@color/white"
                        android:layout_height="wrap_content" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
        <TextView
            android:id="@+id/descTextView"
            android:layout_width="match_parent"
            android:textSize="11sp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/prizeTextView"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textSize="13sp"
                android:textStyle="bold"
                android:fontFamily="@font/montserratb"
                android:text="Prize â‚¹ 4000"
                android:layout_margin="10dp"
                android:layout_gravity="center"
                android:textColor="#000000"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/playButton"
                android:layout_width="0dp"
                android:text="PLAY"
                android:layout_gravity="center"
                android:gravity="center"
                android:fontFamily="@font/montserratb"
                android:elevation="4dp"
                android:background="@drawable/play_button"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="8dp"
                android:textColor="@color/white"
                android:layout_weight="0.3"
                android:layout_height="30dp" />
        </LinearLayout>

    </LinearLayout>


</androidx.cardview.widget.CardView>