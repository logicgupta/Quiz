<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="8dp"
    android:orientation="vertical"
    tools:context=".views.homeScreen.SettingFragment">

    <TextView
        android:layout_width="wrap_content"
        android:textStyle="bold"
        android:text="General"
        android:textSize="22sp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/montserratb"
        android:layout_marginBottom="10dp"
        android:layout_height="wrap_content" />

    <androidx.cardview.widget.CardView
        android:id="@+id/privacy"
        android:layout_marginTop="10dp"
        app:cardCornerRadius="5dp"
        android:elevation="4dp"
        android:padding="8dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_gravity="center"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:text="Privacy Policy"
                android:fontFamily="@font/roboto_regular"
                android:drawableRight="@drawable/ic_chevron_right__24dp"
                android:textSize="20sp"
                android:padding="10dp"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_marginTop="10dp"
        app:cardCornerRadius="5dp"
        android:id="@+id/aboutUs"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:elevation="4dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_gravity="center"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:text="About us"
                android:drawableRight="@drawable/ic_chevron_right__24dp"
                android:textSize="20sp"
                android:fontFamily="@font/roboto_regular"
                android:padding="10dp"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_marginTop="10dp"
        app:cardCornerRadius="5dp"
        android:elevation="4dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:id="@+id/terms"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_gravity="center"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:text="Terms &amp; Conditions"
                android:drawableRight="@drawable/ic_chevron_right__24dp"
                android:textSize="20sp"
                android:fontFamily="@font/roboto_regular"
                android:padding="10dp"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_marginTop="10dp"
        app:cardCornerRadius="5dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:elevation="4dp"
        android:id="@+id/rate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_gravity="center"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:text="Rate us on playstore"
                android:drawableRight="@drawable/ic_chevron_right__24dp"
                android:textSize="20sp"
                android:fontFamily="@font/roboto_regular"
                android:padding="10dp"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_marginTop="10dp"
        app:cardCornerRadius="5dp"
        android:elevation="4dp"
        android:id="@+id/cashback"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_gravity="center"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:text="Cashback Policy"
                android:drawableRight="@drawable/ic_chevron_right__24dp"
                android:textSize="20sp"
                android:fontFamily="@font/roboto_regular"
                android:padding="10dp"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>


    <TextView
        android:layout_width="wrap_content"
        android:textStyle="bold"
        android:text="Account"
        android:textSize="22sp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/montserratb"
        android:layout_height="wrap_content" />


    <androidx.cardview.widget.CardView
        android:id="@+id/logout"
        android:layout_marginTop="10dp"
        app:cardCornerRadius="5dp"
        android:elevation="4dp"
        android:clickable="true"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_gravity="center"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:text="LogOut"
                android:drawableRight="@drawable/ic_chevron_right__24dp"
                android:textSize="20sp"
                android:padding="10dp"
                android:fontFamily="@font/roboto_regular"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>